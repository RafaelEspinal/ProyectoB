@model IEnumerable<ProyectoBFinal.Models.Pacientes>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de pacientes</h2>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="mt-3 col-md-4 col-md-offset-8 input-group">
            @Html.TextBox("SearchString", null, null, new { @class = "form-control" })
            <span class="input-group-btn">
                <input type="submit" class="btn btn-default" value="Buscar" />
            </span>
        </div>
    </div>
}
<p>

</p>
<br />

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Asegurado)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Asegurado)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
