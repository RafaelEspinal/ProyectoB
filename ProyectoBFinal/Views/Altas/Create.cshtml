                </div>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function (){
            $("#dropdatos").change(function () {
                var url = "@Url.Action("BuscadorNom", "Buscador")";
                var clavePaciente = $("#dropdatos").val();
