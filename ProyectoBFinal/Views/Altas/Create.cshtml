        function generaMonto(data) {
            var fechaf = $("#inputFSal").val().replace("-", "");
            var fechai = $("#inputFecha").val().replace("-", "");
            var montoPorDia = data;
            resta = fechaf.replace("-", "") - fechai.replace("-", "");

            return resta * data;
        }
        
    </script>
}
