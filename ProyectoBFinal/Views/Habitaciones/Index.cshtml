@model IEnumerable<ProyectoBFinal.Models.Habitaciones>

@{
    ViewBag.Title = "Index";
}
<h2>Lista de habitaciones</h2>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="mt-3 col-md-4 col-md-offset-8 input-group">
            @Html.TextBox("SearchString", null, null, new { @class = "form-control" })
            <span class="input-group-btn">
                <input type="submit" class="btn btn-default" value="Buscar" />
            </span>
        </div>
    </div>
}
<br />
<p>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Numero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayName("Precio por dia")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio_dia)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-default" }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
